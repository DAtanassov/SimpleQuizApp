@model SimpleQuizApp.Models.ViewModels.QuizViewModel

@if (!Model.Questions.Any())
{
	<div class="alert alert-warning" role="alert"> No quiz questions are available at the moment. Please check back later. </div>
}
else
{
	<h2 class="mb-3">Take the Quiz</h2>
	<hr />
	<form asp-controller="Quiz" asp-action="SubmitQuiz" method="post"> @for (int i = 0; i < Model.Questions.Count; i++) {
	<h6 class="mt-3"><b>@(i + 1):</b> @Model.Questions[i].QuestionText</h6>
	foreach (var answer in Model.Questions[i].Answers)
	{

		<ol> <label> <input required type="radio" value="@answer.Id" name="userAnswers[@i]" /> <b>@answer.Option.</b> @answer.Text </label> </ol>
	}
}
 <hr /> <button type="submit" class="btn btn-primary btn-sm">Submit Quiz</button> | <button type="reset" class="btn btn-warning btn-sm">Reset Quiz</button> | <a asp-controller="Quiz" asp-action="Index" asp-route-Id="@Model.QuizId" class="btn btn-success btn-sm">Reload Quiz</a> | <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-sm">Take another Quiz</a> </form>
}