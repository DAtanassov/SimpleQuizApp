@model SimpleQuizApp.Models.ViewModels.SelectQuizViewModel

@{
    ViewData["Title"] = "Choose a Quiz";
}

<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-4">
                    <h2 class="mb-4 text-primary fw-bold">Choose a Quiz</h2>
                    <hr />

                    @if (!Model.Quizzes.Any())
                    {
                        <div class="alert alert-info" role="alert">
                            No quizzes have been added yet.
                        </div>
                    }
                    else
                    {
                        <form asp-controller="Quiz" asp-action="Index" method="post" class="mt-3 text-start">
                            <div class="list-group mb-4">
                                @for (var i = 0; i < Model.Quizzes.Count; i++)
                                {
                                    <label class="list-group-item list-group-item-action d-flex align-items-center">
                                        <input class="form-check-input me-3" type="radio" name="Id" value="@Model.Quizzes[i].Id" required />
                                        <span class="fw-semibold">@Model.Quizzes[i].QuizName</span>
                                    </label>
                                }
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-sm px-4">Start Quiz</button>
                            </div>
                        </form>
                    }
                </div>
            </div>

            
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold text-success mb-3">Upload More Quizzes</h5>
                    <form enctype="multipart/form-data" method="post" asp-controller="Home" asp-action="Index">
                        <div class="input-group">
                            <input type="file" name="file" class="form-control" accept=".json" />
                            <button class="btn btn-success btn-sm px-4" type="submit">Upload</button>
                        </div>
                        <div class="form-text mt-1">Only JSON files are supported.</div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>